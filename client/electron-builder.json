{
    "appId": "DBOneDesktop",
    "productName": "DBOne Desktop",
    "artifactName": "${productName}.${version}.${ext}",
    "copyright": "Copyright Â© 2024 dbone.test",
    "releaseInfo":{
        "releaseNotesFile":"notes/latest.md"
      },
    "directories": {
        "output": "../release",
        "app": "../dist"
    },
    "publish": [{
        "provider": "github",
        "owner": "yuaiwuhen",
        "repo": "DBOneDesktop",
        "releaseType": "prerelease"
      }],
    "win": {
        "icon": "src/assets/logo.ico",
        "target": [
            {
                "target": "nsis",
                "arch": [
                    "x64"
                ]
            }
        ]
    },
    "mac": {
        "icon": "src/assets/logo.png",
        "target": {
            "target": "dmg",
            "arch": [
                "x64",
                "arm64"
            ]
        }
    },
    "linux": {
        "icon": "src/assets/logo.png",
        "target": {
            "target": "AppImage",
            "arch": [
                "x64"
            ]
        }
    },
    "asar": true,
    "nsis": {
        "oneClick": false,
        "allowToChangeInstallationDirectory": true,
        "installerIcon": "src/assets/logo.ico",
        "uninstallerIcon": "src/assets/logo.ico",
        "installerHeaderIcon": "src/assets/logo.ico",
        "createDesktopShortcut": true,
        "createStartMenuShortcut": true
    },
    "extraMetadata": {
        "main": "background.js"
    }
}